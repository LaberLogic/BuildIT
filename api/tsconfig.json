{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2024",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["jest", "supertest"],
    "baseUrl": ".",
    "paths": {
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@src/*": ["src/*"],
      "@env": ["env.ts"],
      "@prisma/*": ["generated/*"],
      "shared": ["../shared/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "jest.config.ts",
    "utils/*.ts",
    "middlewares/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "files": ["types.d.ts"]
}
