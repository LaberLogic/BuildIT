{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2024",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@src/*": ["src/*"],
      "@env": ["env.ts"],
      "@prisma/*": ["generated/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "jest.config.ts", "utils/*.ts"],
  "exclude": ["node_modules"]
}
