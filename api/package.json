{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "start:prod": "node dist/index.js",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "migrate:dev": "prisma migrate dev --name",
    "migrate:reset": "prisma migrate reset --force",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "migrate:data": "node prisma/seed.js",
    "schema:change": "pnpm run migrate:reset && pnpm run prisma:generate && pnpm run migrate:data"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "bcryptjs": "^3.0.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prisma": "^6.8.2",
    "ts-jest": "^29.3.3"
  }
}
