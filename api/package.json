{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch ./ --ext ts,json --ignore node_modules --ignore dist --exec tsx src/server.ts",
    "start:prod": "node dist/index.js",
    "test:unit": "jest tests/unit",
    "test:integration": "bash scripts/run-integration-tests.sh",
    "test": "bash scripts/run-all-tests.sh",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "migrate:dev": "prisma migrate dev --name",
    "migrate:reset": "prisma migrate reset --force",
    "migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "migrate:data": "tsx prisma/seed-run.ts",
    "schema:change": "pnpm run migrate:reset && pnpm run prisma:generate && pnpm run migrate:data",
    "test:k6": "k6 run ./k6/spike.js"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^6.8.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/supertest": "^6.0.3",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "dotenv-expand": "^12.0.2",
    "envalid": "^8.0.0",
    "fastify": "^5.3.3",
    "fastify-plugin": "^5.0.1",
    "fastify-zod": "^1.4.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun-js": "^0.22.0",
    "neverthrow": "^8.2.0",
    "opossum": "^9.0.0",
    "pino-pretty": "^13.0.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.25.7",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/mailgun-js": "^0.22.18",
    "@types/node": "^22.15.29",
    "@types/opossum": "^8.1.8",
    "jest": "^29.7.0",
    "k6": "^0.0.0",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.3"
  }
}
